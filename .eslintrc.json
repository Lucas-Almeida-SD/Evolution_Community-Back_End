{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends" :[
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2019,
        "project": "./tsconfig.json"
    },
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "warn",
            { 
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "max-len": ["error", 100],
        "complexity": ["error", 8]
    }
}
